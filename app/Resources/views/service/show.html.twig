{% extends 'service.html.twig' %}

{% block body %}
    <h1>Service</h1>
{% for service in services %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ service.title }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ service.level }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ service.categorie }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if service.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('service_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('service_edit', { 'id': service.id }) }}">Edit</a>
        </li>
    </ul>
    {% endfor %}
{% endblock %}
