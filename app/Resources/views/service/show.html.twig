{% extends 'service.html.twig' %}




{% block body %}
   <!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8" />
	<title>{% block title %}La Bouée Corsaire{% endblock %}</title>
	{% block stylesheets %}{% endblock %}
	<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	
	<!-- CSS -->
	<link href="{{ app.request.basepath }}/lib/bootstrap/bootstrap.css" rel="stylesheet">
	<!--<link href="{{ app.request.basepath }}/css/index.css" rel="stylesheet">-->
	<link href="{{ app.request.basepath }}/css/style.css" rel="stylesheet">
	<!-- SCRIPT -->
	<script src="{{ app.request.basepath }}/lib/jquery/jquery-3.1.1.js"></script>
	<script src="{{ app.request.basepath }}/lib/bootstrap/bootstrap.js"></script>
	<script src="{{ app.request.basepath }}/lib/angular/angular.min.js"></script>
	<script src="{{ app.request.basepath }}/lib/script.js"></script>
	<script src="{{ app.request.basepath }}/css/font-awesome/css/font-awesome.min.css"></script>
	<!-- FONT -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet">

</head>
   <body>
	<div class="modal fade" id="myModal" role="dialog">
		<div class="modal-dialog">

			<!-- Modal content-->
			<div class="modal-content">
				<button type="button" class="close" data-dismiss="modal">&times;</button>

				<div class="login-wrap">
					<div class="login-html">
						<input id="tab-1" type="radio" name="tab" class="sign-in" checked>
						<label for="tab-1" class="tab">Sign In</label>
						<input id="tab-2" type="radio" name="tab" class="sign-up">
						<label for="tab-2" class="tab">Sign Up</label>
						
						<div class="login-form">
							{% trans_default_domain 'FOSUserBundle' %}
							<form class="sign-in-htm" action=="{{ path("fos_user_security_check") }}" method="post">
							
								<div class="group">
									<label for="user" class="label">Username</label>
									<input id="username" name="_username" type="text" class="input">
								</div>
								<div class="group">
									<label for="pass" class="label">Password</label>
									<input id="password" name="_password" type="password" class="input" data-type="password">
								</div>
								<div class="group">
									<input id="remember_me" name="_remember_me" type="checkbox" class="check" checked>
									<label for="check"><span class="icon"></span> Keep me Signed in</label>
								</div>
								<div class="group">
									<input type="submit" id="_submit" name="_submit" class="button" value="Sign In">
								</div>
								<div class="hr"></div>
								<div class="foot-lnk">
									<a href="#forgot">Forgot Password?</a>
								</div>
							</form>

							<form class="sign-up-htm">
								<div class="group col-md-6">
									<label for="user" class="label">Prénom</label>
									<input id="user" type="text" class="input">
								</div>
								<div class="group col-md-6">
									<label for="pass" class="label">Nom</label>
									<input id="pass" class="input">
								</div>

								<div class="group col-md-6">
									<label for="pass" class="label">Pseudo</label>
									<input id="pass" type="text" class="input">
								</div>
								<div class="group col-md-6">
									<label for="pass" class="label">Email</label>
									<input id="pass" type="text" class="input">
								</div>
								<div class="group col-md-12">
									<label for="pass" class="label"> Password</label>
									<input id="pass" type="password" class="input" data-type="password">
								</div>

								<div class="group col-md-12">
									<label for="pass" class="label">Repeat Password</label>
									<input id="pass" type="password" class="input" data-type="password">
								</div>
								<div class="group col-md-6">
									<label for="pass" class="label">Code Postal</label>
									<input id="pass" type="text" class="input">
								</div>
								<div class="group col-md-6">
									<label for="pass" class="label">téléphone</label>
									<input id="pass" type="text" class="input">
								</div>
								<div class="group col-md-12">
									<label for="pass" class="label">Status téléphone</label>
									<select class="col-md-12">
										<option>Public</option>
										<option>Pour vos contact</option>
										<option>Pour les utilisteurs</option>
										<option>Privé</option>
									</select>
								</div>
								<div class="group col-md-12">
									<label for="pass" class="label">Vos services</label>
									<input id="pass" type="text" class="input">
								</div>
								<div class="group col-md-12">
									<label for="pass" class="label">Catégorie</label>
									<select class="col-md-12">
										<option>Exemple 1</option>
										<option>Exemple 2</option>
										<option>Exemple 3</option>
										<option>Exemple 4</option>
									</select>
								</div>

								<div class="group col-md-12">
									<input type="submit" class="button" value="Sign Up">
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
   
   <nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="{{ path('homepage') }}">Bouée Corsaire</a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="nav navbar-nav">
					<li><a href="{{ path('service_index') }}">Services</a></li>
					<li><a href="{{ path('besoin_index') }}">Besoins</a></li>
					{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					<li><a href="{{ path('fos_user_profile_show') }}">Mon profil</a></li>
					<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        	<span class="glyphicon glyphicon-user"></span> Bienvenue, {{ app.user.username }} <b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><a href="{{ path('fos_user_security_logout') }}">Deconnexion</a></li>
						</ul>
                    </li>
					{% else %}
					<li>
						<button type="button" class="login" data-toggle="modal" data-target="#myModal">Inscription & connexion</button>
					</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
   
   <!--HEADER AVEC IMAGE PARALLAX -->
    <div>
        <div class="header-service">
            <h3>BOUéE CORSAIRE</h3>
            <p>Rechercher un service</p>
        </div>
    </div>
    
    <section class="recherche">
        <form action="">
            <input type="text" placeholder="Recherche par mots clefs" maxlength="50">
            <select name="" id="">
               {% for service in services|sort %}

                <option value="">{{ service.categorie }}</option>
                {% endfor %}
            </select>
            <input type="text" placeholder="Code Postal" maxlength="5">
            <button type="submit">Rechercher</button>
        </form>
    </section>
    
<section class="annonce-service">    
{% for service in services %}
<div class="section-annonce">
        <div class="petite-annonce">
            <img src="{{ app.request.basepath }}/images/voiture.jpg" alt="">
            <div class="present-annonce">
                <p>2H</p>
                <div>
                    <h5>{{ service.title }}</h5>
                    <small>{{ service.categorie }}</small>
                </div>
            </div>
            <div class="present-annonce present-annonce-description">
                <p>2H</p>
                <div>
                    <h5>{{ service.id }} - 49000</h5>
                    <small>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sint harum dolores nihil tempora</small>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</section>
<ul class="breadcrumb">    
    <li><a href="#" class="active">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>    
    <li><a href="#">4</a></li>    
    <li><a href="#">5</a></li>    
    <li><a href="#">6</a></li>       
</ul>
  

    <!-- FOOTER -->
<footer>
    <div>
        <h4>Lorem</h4>
        <a href="{{ path('homepage') }}">Accueil</a>
        <a href="{{ path('service_index') }}">Services</a>
        <a href="{{ path('besoin_index') }}">Besoins</a>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <a href="">Mon profil</a>
		{% endif %}
       
        
    </div>
    <div>
        <h4>Social</h4>
        <a href="#">Facebook</a>
        <a href="#">Twitter</a>
        <a href="#">Google+</a>
    </div>
    <div>
        <h4>Contact</h4>
        <a href="HREF="mailto:adresse1@contact.com"">adresse1@contact.com</a>
        <a href="HREF="mailto:adresse2@contact.com"">adresse2@contact.com</a>
        <p>Adress - Siège de l'association</p>
    </div>
    <div>
        <button data-toggle="modal" data-target="#myModal">M'inscrire</button>
    </div>
</footer>



</body>

</html>
{% endblock %}


